<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <% if current_user.invitation_received(user) %>
            <%= " sent you a friend request: " %>
            <%= link_to 'Accept', user_path(user, params: { friendship: 'accept', user_id: user.id }), method: :post, class: 'btn btn-secundary' %>
          <% end %>
          <%= send_invite(user) %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
